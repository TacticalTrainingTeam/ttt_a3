{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "markdownlint",
			"problemMatcher": [
				"$markdownlint"
			],
			"label": "markdownlint: Lint all Markdown files in the workspace with markdownlint"
		},
		{
			"label": "Validate: Config",
			"command": "${config:python.defaultInterpreterPath}",
			"options": {
				"cwd": "${workspaceFolder}/tools"
			},
			"args": [
				"config_style_checker.py"
			],
			"problemMatcher": []
		},
		{
			"label": "Validate: Stringtables",
			"command": "${config:python.defaultInterpreterPath}",
			"options": {
				"cwd": "${workspaceFolder}/tools"
			},
			"args": [
				"stringtable_validator.py"
			],
			"problemMatcher": []
		},
		{
			"label": "Check: Undefined Strings",
			"command": "${config:python.defaultInterpreterPath}",
			"options": {
				"cwd": "${workspaceFolder}/tools"
			},
			"args": [
				"check_strings.py"
			],
			"problemMatcher": []
		},
		{
			"label": "Check: Unused Privates",
			"command": "${config:python.defaultInterpreterPath}",
			"options": {
				"cwd": "${workspaceFolder}/tools"
			},
			"args": [
				"search_unused_privates.py"
			],
			"problemMatcher": []
		},
		{
			"label": "Check: HEMTT",
			"command": "hemtt.exe",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"check",
				"-p",
				"-v"
			],
			"problemMatcher": []
		},
		{
			"label": "Test All",
			"dependsOn": [
				"Validate: Config",
				"Validate: Stringtables",
				"Check: Undefined Strings",
				"Check: Unused Privates",
				"Check: HEMTT"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Build: HEMTT",
			"command": "hemtt.exe",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"build",
				"-v"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build: HEMTT --just",
			"command": "hemtt.exe",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"build",
				"--just",
				"${input:addon}",
				"-v"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "Release: HEMTT --no-sign",
			"command": "hemtt.exe",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"release",
				"--no-sign",
				"-v"
			],
			"group": {
				"kind": "build"
			}
		}
	],
    "inputs": [
        {
            "id": "addon",
            "description": "Addon Name:",
            "default": "common",
            "type": "promptString"
        }
	]
}